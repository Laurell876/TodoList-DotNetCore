@model IEnumerable<ToDoApplication.Models.Todo>


<h1 class="text-center">Todos</h1>


<div id="all_todos">
    @foreach (var item in Model)
    {
        <div id="single_todo">
            <p class="m-0 p-0" id="todo_content">@Html.DisplayFor(modelItem => item.content)</p>
            <form  asp-action="Delete" 
               asp-controller="Todos"
               asp-route-todoId="@item.Id"
                  method="post"
                  > 
                <button type="submit" id="delete_button">
                    <svg id="delete_todo_icon" width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-trash" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                        <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4L4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                    </svg>
                </button>
            </form>
        </div>

    }
    <div id="add_todo_button_section">
        <button type="button" class="btn btn-primary">Add Todo</button>
    </div>
</div>